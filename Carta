    <script>
        // Script para mejorar la experiencia
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üíñ Carta de amor cargada para Roc√≠');
            
            // Agregar efecto de carga suave a las im√°genes
            const images = document.querySelectorAll('img');
            let loadedCount = 0;
            const totalImages = images.length;
            
            images.forEach(img => {
                // Verificar si ya est√° cargada
                if (img.complete) {
                    loadedCount++;
                    img.style.opacity = '1';
                } else {
                    // Cuando cargue
                    img.addEventListener('load', function() {
                        loadedCount++;
                        this.style.opacity = '1';
                        this.style.transition = 'opacity 0.5s ease';
                        
                        // Actualizar t√≠tulo cuando todas carguen
                        if (loadedCount === totalImages) {
                            document.title = "üíñ Para mi linda Roc√≠ - ¬°Fotos cargadas!";
                            console.log('‚úÖ Todas las fotos cargadas');
                        }
                    });
                    
                    // Manejar errores
                    img.addEventListener('error', function() {
                        console.warn(`‚ö†Ô∏è No se pudo cargar: ${this.alt}`);
                        this.style.border = '2px dashed #ff66a3';
                        this.parentElement.style.backgroundColor = '#fff0f5';
                    });
                }
                
                // Efecto de zoom al hacer clic
                img.addEventListener('click', function() {
                    this.style.transform = this.style.transform === 'scale(1.5)' ? 'scale(1)' : 'scale(1.5)';
                    this.style.zIndex = this.style.zIndex === '100' ? '1' : '100';
                    this.style.transition = 'transfo
